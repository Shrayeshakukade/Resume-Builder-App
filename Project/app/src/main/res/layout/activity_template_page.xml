            android:layout_below="@+id/tvChoose"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="For Experienced"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvExperiencedText"
            android:layout_below="@+id/tvChoose"
            android:background="#FFFFFF"
            android:textColor="#582804"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29dp" />

        <Button android:layout_height="150dp" android:layout_width="120dp" android:background="@drawable/t1" android:id="@+id/btn7"
            android:layout_marginTop="81dp"
            android:layout_below="@+id/btn5"
            android:layout_alignLeft="@+id/btn5"
            android:layout_alignStart="@+id/btn5" />

        <TextView
            android:text="For Fresher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:textColor="#582804"
            android:id="@+id/tvFresherText"
            android:layout_above="@+id/btn8"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="26dp" />

    </RelativeLayout>
