<?xml version="1.0" encoding="UTF-8"?>

<ScrollView android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout android:layout_height="800dp" android:layout_width="match_parent" android:background="@color/colorAccent">

        <Button android:layout_height="150dp" android:layout_width="120dp" android:background="@drawable/t4" android:layout_alignBottom="@+id/btn3" android:layout_alignRight="@+id/btn2" android:layout_alignEnd="@+id/btn2" android:layout_alignBaseline="@+id/btn3" android:id="@+id/btn4"/>

        <Button android:layout_height="150dp" android:layout_width="120dp" android:background="@drawable/t6" android:layout_alignBottom="@+id/btn5" android:layout_alignBaseline="@+id/btn5" android:id="@+id/btn6" android:layout_alignLeft="@+id/btn4" android:layout_alignStart="@+id/btn4"/>

