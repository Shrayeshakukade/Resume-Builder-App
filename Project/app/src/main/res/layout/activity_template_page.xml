        <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:background="#FFFFFF" android:id="@+id/tvChoose" android:layout_marginTop="27dp" android:textSize="20sp" android:textColor="#582804" android:textAppearance="@style/TextAppearance.AppCompat.Body2" android:text="Choose a template" android:layout_centerHorizontal="true" android:layout_alignParentTop="true"/>

        <Button android:layout_height="150dp" android:layout_width="120dp" android:background="@drawable/t2" android:layout_alignBottom="@+id/btn7" android:layout_alignRight="@+id/btn6" android:layout_alignEnd="@+id/btn6" android:id="@+id/btn8"/>

        <Button android:layout_height="150dp" android:layout_width="120dp" android:background="@drawable/t2" android:layout_alignBottom="@+id/btn1" android:layout_alignBaseline="@+id/btn1" android:id="@+id/btn2" android:layout_marginRight="27dp" android:layout_marginEnd="27dp" android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>

